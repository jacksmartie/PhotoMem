<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/menu_background">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView1" android:src="@drawable/name"></ImageView>
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/nameEditText1"></EditText>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:gravity="center">
        <ImageButton android:id="@+id/imageButton1" android:layout_height="wrap_content" android:onClick="OnButtonNameOkClickListener" android:src="@drawable/check" android:background="@drawable/frame" android:layout_width="wrap_content"></ImageButton>
        <ImageButton android:id="@+id/imageButton2" android:layout_height="wrap_content" android:onClick="OnButtonNameCancelClickListener" android:src="@drawable/cancel" android:background="@drawable/frame" android:layout_width="wrap_content"></ImageButton>
    </LinearLayout>
</LinearLayout>
